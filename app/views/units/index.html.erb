<div class="container">
	<div class="row">
		<h1>Listing units</h1>
		<div class="column">
      <table class="table">
				<thead>
					<tr>
						<th>Group</th>
						<th>Name</th>
						<th>Email</th>
						<th>Telephone</th>
						<th>Active</th>
						<th>Note</th>
						<th>Account</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @units.each do |unit| %>
						<% if unit.active?
								@cl='class=success' 
						else
								@cl='class=active' 
						end%>
						<tr <%=@cl%> >
						  <td><%= Group.find(unit.group_id).name %></td>
						  <td><%= unit.name %></td>
						  <td><%= unit.email %></td>
						  <td><%= unit.telephone %></td>
						  <td><%= unit.active %></td>
						  <td><%= unit.note %></td>
						  <td><%= unit.account_id %></td>
						  <td><%= link_to 'Users', users_path(:unit_id => unit.id), :class => 'button-xs' %></td>
						  <td><%= link_to 'Show', unit, :class => 'button-xs' %></td>
						  <td><%= link_to 'Edit', edit_unit_path(unit), :class => 'button-xs' %></td>
						  <td><%= link_to 'Destroy', unit, :class => 'button-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
		      </tbody>
					<tr></tr>
		    </table>
			</div>
		</div>
		<br>
		<%= link_to 'New Unit', new_unit_path %>
	</div>
</div>
