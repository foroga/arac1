<div class="container">
	<div class="row">
		<h1>Listing order_suppliers</h1>
		<div class="column">
      <table class="table">  
				<thead>
					<tr>
						<th>Order</th>
						<th>Supplier</th>
						<th>Group</th>
						<th>Position</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody align="left">
					<% @order_suppliers.each do |order_supplier| %>
						<tr>
						  <td><%=order_supplier.order_id%></td>
						  <td><%= Supplier.find(order_supplier.supplier_id).name %></td>
						  <td><%= Group.find(order_supplier.group_id).name if  order_supplier.group_id %></td>
						  <td><%= order_supplier.position %></td>
						  <td><%= link_to 'Show', order_supplier %></td>
						  <td><%= link_to 'Edit', edit_order_supplier_path(order_supplier) %></td>
						  <td><%= link_to 'Destroy', order_supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<br>
	<%= link_to 'New Order supplier', new_order_supplier_path(:order_id=> @order_suppliers.first.order_id) %>
</div>


