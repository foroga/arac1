<div class="container">
	<div class="row">
		<h1>Listing items</h1>
		<div class="column">
      <table class="table">  
				<thead>
				<tr>
				  <th>Order</th>
				  <th>Product</th>
				  <th>Supplier</th>
				  <th>Name</th>
				  <th>Note</th>
				  <th>Minall</th>
				  <th>Mingroup</th>
				  <th>Minunit</th>
				  <th>Kgxunit</th>
				  <th>Unittype</th>
				  <th>Price</th>
				  <th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @items.each do |item| %>
				  <tr>
				    <td><%= item.order_id %></td>
				    <td><%= item.product_id %></td>
				    <td><%= Supplier.find(item.supplier_id).name %></td>
				    <td><%= item.name %></td>
				    <td><%= item.note %></td>
				    <td><%= item.minall %></td>
				    <td><%= item.mingroup %></td>
				    <td><%= item.minunit %></td>
				    <td><%= item.kgxunit %></td>
				    <td><%= item.unittype %></td>
				    <td><%= item.price %></td>
				    <td><%= link_to 'Show', item %></td>
				    <td><%= link_to 'Edit', edit_item_path(item) %></td>
				    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
	<br>
	<%= link_to 'New Item', new_item_path %>
</div>


