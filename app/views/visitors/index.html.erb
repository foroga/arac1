<div class="container">
	<% if user_signed_in? %>
		<h3> Welcome <%= link_to current_user.name, user_path(current_user) %></h3>
		<% if current_user.admin? %>
			<p>Admin area</p>
		  <p><%= link_to 'Users:', users_path %> <%= User.count %> registered 
         <%= User.active.count %> active
      </p>
		  <p><%= link_to 'Units:', units_path %> <%= Unit.active.count %> active</p>
		  <p><%= link_to 'Groups:', groups_path %> <%= Group.active.count %> living</p>
		  <p><%= link_to 'Products:', products_path %> <%= Product.active.count %> active</p>
		  <p><%= link_to 'Supplier:', suppliers_path %> <%= Supplier.active.count %> living</p>
		  <p><%= link_to 'Order:', orders_path %> <%= Order.count %> created </p>
		  <p><%= link_to 'OrderSupplier', order_suppliers_path %> </p>
		  <p><%= link_to 'Item', items_path %> </p>
		<% end %>
	<% else %>
		<h3>Welcome </h3>
	<% end %>
</div>
