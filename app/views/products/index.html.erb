
<div class="container">
	<div class="row">
		<h1>Listing products</h1>
		<div class="column">
      <table class="table">  <thead>
				<thead>
					<tr>
						<th>Supplier</th>
						<th>Name</th>
						<th>Imageurl</th>
						<th>Active</th>
						<th>Note</th>
						<th>Minall</th>
						<th>Mingroup</th>
						<th>Minunit</th>
						<th>Kgxunit</th>
						<th>Unittype</th>
						<th>Price</th>
						<th>Priceold</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody align="left">
					<% @products.each do |product| %>
						<% if product.active?
								@cl='class=success' 
						else
								@cl='class=active' 
						end%>
            <tr <%=@cl%>>
						  <td><%= Supplier.find(product.supplier_id).name %></td>
						  <td><%= product.name %></td>
						  <td><%= product.imageurl %></td>
						  <td><%= product.active %></td>
						  <td><%= product.note %></td>
						  <td><%= product.minall %></td>
						  <td><%= product.mingroup %></td>
						  <td><%= product.minunit %></td>
						  <td><%= product.kgxunit %></td>
						  <td><%= product.unittype %></td>
						  <td><%= product.price %></td>
						  <td><%= product.priceold %></td>
						  <td><%= link_to 'Show', product, :class => 'btn btn-default btn-xs' %></td>
						  <td><%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default btn-xs' %></td>
						  <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %></td>
						</tr>
					<% end %>
				</tbody>
					<tr></tr>
		    </table>
			</div>
		</div>
		<br>
		<%= link_to 'New Product', new_product_path %>
	</div>
</div>


