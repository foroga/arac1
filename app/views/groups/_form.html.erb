<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :telefone %>
    <%= f.input :active %>
    <%= f.input :dealtype %>
    <%= f.input :note %>
    <%= f.input :address %>
    <br>
    <%= f.label 'Reponsables:' %>
    <br>
    <%= f.label :error_unit_id %>
    <%= f.select(:error_unit_id, @units.map {|s| [s.name, s.id]}) %>
    <%= f.label :acounting_unit_id %>
    <%= f.select(:acounting_unit_id, @units.map {|s| [s.name, s.id]}) %>
    <%= f.label :bill_unit_id %>
    <%= f.select(:bill_unit_id, @units.map {|s| [s.name, s.id]}) %>
    <%= f.label :sw_unit_id %>
    <%= f.select(:sw_unit_id, @units.map {|s| [s.name, s.id]}) %>
    <br><br>
    <%= f.input :acount_id %>
  </div>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
