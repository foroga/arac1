<div class="container">
	<div class="row">
		<h1>Listing suppliers</h1>
		<div class="column">
      <table class="table">  <thead>
				<tr>
				  <th>Name</th>
				  <th>Email</th>
				  <th>Telephone</th>
				  <th>Url</th>
				  <th>Active</th>
				  <th>Note</th>
				  <th>Frecuency</th>
				  <th>Ranking</th>
				  <th>Account</th>
				  <th>Group</th>
				  <th>Watcher unit</th>
				  <th colspan="3"></th>
				</tr>
			</thead>
			<tbody align="left">
				<% @suppliers.each do |supplier| %>
						<% if supplier.active?
								@cl='class=success' 
						else
								@cl='class=active' 
						end%>
            <tr <%=@cl%>>
				    <td><%= supplier.name %></td>
				    <td><%= supplier.email %></td>
				    <td><%= supplier.telephone %></td>
				    <td><%= supplier.url %></td>
				    <td><%= supplier.active %></td>
				    <td><%= supplier.note %></td>
				    <td><%= supplier.frecuency %></td>
				    <td><%= supplier.ranking %></td>
				    <td><%= supplier.account_id %></td>
				    <td><%= Group.find(supplier.group_id).name if supplier.group_id %></td>
				    <td><%= Unit.find(supplier.watcher_unit_id).name if supplier.watcher_unit_id %></td>
						<td><%= link_to 'Products', products_path(:supplier_id => supplier.id), :class => 'btn btn-default btn-xs' %></td>
				    <td><%= link_to 'Show', supplier, :class => 'btn btn-default btn-xs' %></td>
				    <td><%= link_to 'Edit', edit_supplier_path(supplier), :class => 'btn btn-default btn-xs' %></td>
				    <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-xs' %></td>
					<% end %>
		      </tbody>
					<tr></tr>
		    </table>
			</div>
		</div>
		<br>
		<%= link_to 'New Supplier', new_supplier_path %>
	</div>
</div>

