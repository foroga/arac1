<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :order_id %>
    <%= f.input :product_id %>
    <%= f.input :supplier_id %>
    <%= f.input :name %>
    <%= f.input :note %>
    <%= f.input :minall %>
    <%= f.input :mingroup %>
    <%= f.input :minunit %>
    <%= f.input :kgxunit %>
    <%= f.input :unittype %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
